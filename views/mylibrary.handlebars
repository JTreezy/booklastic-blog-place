    <!-- this is the beginning of the page for the library -->
    <!-- there will be two major columns to spilt the favorites(25%) and the reviews (75%) -->
    <!-- inside the favorites section there will be two rows and three cards across max -->
    <!-- just creating an area for the reviews and button -->
<!-- beginning card -->
<h2 class="bigTitle" style="font-size: 80px; padding: 20px;">{{first_name}}'s Library</h2>
<div class="container d-flex flex-wrap justify-content-around">
{{#each blogs}}
<div class="d-flex">
        <div class="px-1 smallsize">
            <div class="card text-dark bg-warning mb-3" style="width: 18rem;">
                <div class="card-header">{{title}}</div>
                <div class="card-body">
                    <ul style="text-decoration: underline !important; list-style-type: none !important; padding: 0 !important;">
                        <li><h5 class="card-title">{{book.title}}</h5></li>
                        <li><h5 class="card-title">{{book.author}}</h5></li>
                    </ul>
                    {{#each book.genres}}
                    <h5 class="card-title">{{name}}</h5>
                    {{/each}}
                    <p class="card-text" style="height: 7rem; overflow-y: scroll;">{{review}}</p>
                <div class="bg-transparent d-flex justify-content-between p-0">
                    <ul class="d-flex p-0" style="list-style-type:none;">
                        <li style="padding-top:5px; padding-right: 5px;">
                            <button type="button" class="btn btn-link deletebtn" style="padding:10px;" value="{{id}}" data-toggle="tooltip" data-placement="top" title="Delete this review" data-bs-toggle="modal" data-bs-target="#deletemodal">
                                <img src="/images/trash-can.png" alt="trashcan" style="max-width: 20px;">
                            </button>
                        </li>
                        <li style="padding-top:5px; padding-right: 5px;">
                            <button type="button" class="btn btn-link editbtn" style="padding:10px;" value="{{id}}" data-toggle="tooltip" data-placement="top" title="Edit/update this review">
                                <img src="/images/pencil.png" alt="pencil" style="max-width: 20px;">
                            </button>
                            {{!-- <span class="tooltiptext">Edit/Update</span> --}}
                        </li>
                    </ul>
                    <h6 class="d-flex align-items-center">{{first_name}}</h6>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}
</div>
<div class="d-flex justify-content-center">
    <button type="button" class="btn btn-dark" id="customBTN"><a href="/review">Add a Review!</a></button>
</div>

<div class="modal fade" id="deletemodal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete?</h5>
      </div>
      <div class="modal-body">
        <p>
            This will permanently delete your review from the database.
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="confirmdelete" data-bs-target="#itemwasdeleted" data-bs-toggle="modal" data-bs-dismiss="modal" >Confirm</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="itemwasdeleted" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <p>
            Review deleted.
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

